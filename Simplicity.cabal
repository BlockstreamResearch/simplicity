  default-language:    Haskell2010
  ghc-options:         -O2
  build-depends:       base >=4.9 && <4.20,
                       binary >=0.7 && <0.9,
                       bytestring >=0.10 && <0.13,
                       containers >=0.5.10 && <0.7,
                       cereal >=0.5 && <0.6,
                       lens-family >=2.0 && <2.2,
                       mtl >=2.2 && <2.4,
